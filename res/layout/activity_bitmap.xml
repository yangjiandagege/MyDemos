<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content">
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" 
	    android:id="@+id/activity_bitmap">
	    
		<Button 
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
			android:text="showDisplayInfo" 
			android:onClick="showDisplayInfo"/>
		<Button 
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
			android:text="selectPicture" 
			android:onClick="selectPicture"/>
		<Button 
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
			android:text="compressImage" 
			android:onClick="compressImage"/>
		<Button
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
			android:text="convertGreyImage" 
			android:onClick="convertGreyImage"/>
		<Button
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
			android:text="addTimeToImage" 
			android:onClick="addTimeToImage"/>
		<Button
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:text="adjustPhotoRotation" 
            android:onClick="adjustPhotoRotation"/>
        <Button
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:text="savePhoto" 
            android:onClick="savePhoto"/>
	    <com.example.test.bitmap.TouchImageView
	        android:id="@+id/imageView"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"/>
	    
	</LinearLayout>
</ScrollView>